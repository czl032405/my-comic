<view>
  <view style="display:flex; flex-wrap:wrap;margin-bottom:20rpx">
    <navigator url="{{'/pages/comic-pages/comic-pages?id='+id+'&order='+ (page.total- ((page.pageNo-1)*40+index))}}" wx:key='index' wx:for='{{eps}}' wx:for-item='ep'>
      <button size='mini' style="background:rgba(0,0,0,0.01);color:grey;font-weight:100;font-size:30rpx;margin:10rpx">
        {{ep.title}}
      </button>
    </navigator>
  </view>
  <view wx:if='{{comics.length}}' style='display:flex;justify-content:space-between;'>
    <view>分页</view>
    <view></view>
  </view>
  <mp-loading show='{{showLoading}}'></mp-loading>
</view>