<view>
  <view style="display:flex; flex-wrap:wrap;margin-bottom:20rpx">
    <navigator url="{{'/pages/comic-pages/comic-pages?id='+id+'&ep='+ ep._id +'&index='+(currentEp== ep._id?currentIndex:0)+'&api='+api}}" wx:key='index' wx:for='{{eps}}' wx:for-item='ep'>
      <button size='mini' style="background:{{currentEp==ep._id?'rgba(0,0,0,0.3)':'rgba(0,0,0,0.01)'}};color:{{currentEp==ep._id?'purple':'grey'}};font-weight:{{currentEp== ep._id?'700':'100'}};font-size:30rpx;margin:10rpx">
        {{ep.title}}
      </button>
    </navigator>
  </view>
  <mp-loading show='{{showLoading}}'></mp-loading>
</view>